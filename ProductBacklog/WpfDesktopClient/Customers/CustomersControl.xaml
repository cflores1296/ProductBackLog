<UserControl x:Class="WpfDesktopClient.Customers.CustomersControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfDesktopClient.Customers"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Loaded="customersControl_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel  Margin="0,20,12,0" HorizontalAlignment="Right" Orientation="Horizontal">
            <ProgressBar Foreground="Red" Name="progressBar" IsIndeterminate="True" Width="50"></ProgressBar>
            <Button Name="addButton" Click="addButton_Click">Add</Button>
            <Button Name="editButton" Click="editButton_Click">Edit</Button>
            <Button Name="removeButton" Click="removeButton_Click">Remove</Button>
        </StackPanel>

        <DataGrid Margin="0,12,0,0" x:Name="dataGrid" Grid.Row="1" RowHeight="30" SelectionMode="Extended"/>
    </Grid>

</UserControl>
