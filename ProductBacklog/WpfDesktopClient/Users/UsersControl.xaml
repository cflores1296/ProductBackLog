<UserControl x:Class="WpfDesktopClient.Users.UsersControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfDesktopClient.Users" Loaded="UserControl_Loaded">
    
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel  Margin="0,20,12,0" HorizontalAlignment="Right" Orientation="Horizontal">
            <ProgressBar Foreground="Red" Name="progressBar" IsIndeterminate="True" Width="50"></ProgressBar>
                <Button Name="addUserButton" Click="addUserButton_Click">Add</Button>
                <Button Name="editUserButton" Click="editUserButton_Click">Edit</Button>
                <Button Name="removeUserButton" Click="removeUserButton_Click">Remove</Button>
            </StackPanel>
            
            <DataGrid Margin="0,12,0,0" x:Name="dataGrid" Grid.Row="1" RowHeight="30" SelectionMode="Extended"/>
        </Grid>
  
</UserControl>
