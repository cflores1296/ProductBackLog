<Window x:Class="WpfDesktopClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDesktopClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" WindowState="Maximized" Loaded="Window_Loaded">
    <Grid>
        <TabControl x:Name="tabControl" >
            <TabItem Header="Wishlist">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Customers">
                <Grid Name="customersGrid"/>
            </TabItem>
            <TabItem Header="Users">
                <Grid Name="userGrid"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
