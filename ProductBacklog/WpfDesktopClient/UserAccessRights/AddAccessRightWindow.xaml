<dx:ThemedWindow x:Class="WpfDesktopClient.UserAccessRights.AddAccessRightWindow" mc:Ignorable="d" Title="Add Access Right" Loaded="Window_Loaded" WindowStartupLocation="CenterOwner" Height="200" Width="340" ResizeMode="NoResize" 
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:local="clr-namespace:WpfDesktopClient.UserAccessRights">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <StackPanel Margin="20">
            <TextBlock>Access Right Name</TextBlock>
            <TextBox Margin="0,6,0,0" Name="accessRightNameTextBox" />
        </StackPanel>



        <StackPanel Margin="0,0,0,12" HorizontalAlignment="Right" Grid.Row="1" Orientation="Horizontal">
            <Button MinWidth="80" Margin="0,0,10,0" Name="cancelButton" Click="cancelButton_Click">Cancel</Button>
            <Button MinWidth="80" Margin="0,0,20,0" Name="saveButton" Click="saveButton_Click">Save</Button>
        </StackPanel>

        <ProgressBar VerticalAlignment="Top" Foreground="Red" Name="progressBar" IsIndeterminate="True" Height="5" />
        
    </Grid>
</dx:ThemedWindow>